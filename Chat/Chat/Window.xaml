<Window x:Class="Chat.Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chat"
        mc:Ignorable="d"
        Title="Window" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top">
            <ComboBox x:Name="Userlist" ScrollViewer.CanContentScroll="True" MaxHeight="500"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0">
            <TextBox x:Name="User" Text="Type Log User"  Height="22"/>
            <TextBox x:Name="Password" Text="Type Password"  Height="22"/>
            <Button x:Name="connectButton" Content="Login" Click="connectButton_Click"/>
            <TextBox x:Name="Msg" Text="Type Message" Height="22"/>
            <Button x:Name="sendButton" Content="Send Message" Click="sendButton_Click"/>
            <ListBox x:Name="messagesList" ScrollViewer.CanContentScroll="True" MaxHeight="500"/>
        </StackPanel>
    </Grid>
</Window>
